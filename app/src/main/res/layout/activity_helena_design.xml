<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/helena"
    tools:context=".HelenaDesign">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal"
        android:id="@+id/guide_helena"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Helena \nLovelance"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide_helena"
        app:layout_constraintBottom_toTopOf="@id/view"
        android:id="@+id/tv_helena"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="35dp"
        />
    <View
        android:layout_width="110dp"
        android:layout_height="6dp"
        android:layout_margin="10dp"
        android:id="@+id/view"
        android:background="@drawable/view_design"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_helena"
        app:layout_constraintBottom_toTopOf="@id/constraint"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintBottom_toTopOf="@id/btn_follow"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="158 \nposts"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/posts"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/followers"
            app:layout_constraintHorizontal_chainStyle="spread"
            />
        <View
            android:layout_width="70dp"
            android:layout_height="4dp"
            android:id="@+id/view_posts"
            android:layout_margin="5dp"
            android:background="@drawable/view_design"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/posts"
            app:layout_constraintEnd_toStartOf="@id/followers"
            app:layout_constraintHorizontal_chainStyle="spread"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="169 \nfollowers"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/followers"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/posts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/following"
        />
    <View
        android:layout_width="90dp"
        android:layout_height="4dp"
        android:id="@+id/view_followers"
        android:layout_margin="5dp"
        android:background="@drawable/view_design"
        app:layout_constraintStart_toEndOf="@id/view_posts"
        app:layout_constraintTop_toBottomOf="@id/posts"
        app:layout_constraintEnd_toStartOf="@id/view_following"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="182 \nfollowing"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/following"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintStart_toEndOf="@id/followers"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:layout_width="90dp"
        android:layout_height="4dp"
        android:layout_margin="5dp"
        android:id="@+id/view_following"
        android:background="@drawable/view_design"
        app:layout_constraintStart_toEndOf="@id/view_followers"
        app:layout_constraintTop_toBottomOf="@id/posts"
        app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_follow"
        android:text="follow"
        android:textColor="@color/light_green"
        android:textSize="17dp"
        android:padding="10dp"
        android:letterSpacing="0.3"
        android:id="@+id/btn_follow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint"
        app:layout_constraintBottom_toTopOf="@id/btn_message"
        android:layout_margin="30dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_message"
        android:text="message"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:padding="10dp"
        android:letterSpacing="0.3"
        android:id="@+id/btn_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_follow"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>